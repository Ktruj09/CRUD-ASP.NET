@model CrudEntityFramework.Models.Usuario

@{
    ViewData["Title"] = "Eliminar Usuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">Eliminar usuario</h1>


<div class="row">
    <div class="col-12">
        <div class="card border">
            <div class="card-header">
                <h3><strong><i class="fas fa-user"></i> Borrar usuario</strong></h3>
            </div>
        </div>
        <div class="card-body">

            <div class="card col-12">
                <div class="card-header">
                    <h3>Usuario a borrar</h3>
                </div>
                <form asp-action="Delete">
                    <!--Campo oculto para verificar el id del registro-->
                    <input type="hidden" value="Id" />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Nombre" class="control-label"></label>
                        <input asp-for="Nombre" class="form-control" readonly/>
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Telefono" class="control-label"></label>
                        <input asp-for="Telefono" class="form-control" readonly />
                        <span asp-validation-for="Telefono" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Celuar" class="control-label"></label>
                        <input asp-for="Celuar" class="form-control" readonly/>
                        <span asp-validation-for="Celuar" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" readonly/>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div>


                        <button type="submit" class="btn btn-danger" id="liveAlertBtn"><i class="fas fa-user"> Eliminar Usuario</i></button>
                    </div>
                    <hr />
                </form>
            </div>
        </div>
    </div>
</div>
<div>
    <a asp-action="Index">Volver a la lista</a>
</div>