@model CrudEntityFramework.Models.Usuario

@{
    ViewData["Title"] = "Detalles del usuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">Detalles Usuario</h1>


<div class="row">
    <div class="col-12">
        <div class="card border">
            <div class="card-header">
                <h3><strong><i class="fas fa-user"></i> Detalle del Usuario</strong></h3>
            </div>
        </div>
        <div class="card-body">
            <ul class="list-group">
                <li class="list-group-item"><strong>Nombre: </strong>@Html.DisplayFor(m => m.Nombre) </li>
                <li class="list-group-item"><strong>Celular: </strong>@Html.DisplayFor(m => m.Celuar) </li>
                <li class="list-group-item"><strong>Teléfono: </strong>@Html.DisplayFor(m => m.Telefono) </li>
                <li class="list-group-item"><strong>Email: </strong>@Html.DisplayFor(m => m.Email) </li>
            </ul>
        </div>
    </div>
</div>
<div>
    <a asp-action="Index">Volver a la lista</a>
</div>
